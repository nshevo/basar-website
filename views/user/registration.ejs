<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head.ejs') %>

    <body class="d-flex flex-column min-vh-100">
        <%- include('../partials/header.ejs') %>

            <div class="container-fluid bg-white">
                <div class="row">
                    <%- include('../partials/categories.ejs') %>
                        <div class="col-9" id="main">
                            <h3 class="title">
                                <%- title %>
                            </h3>

                            <ul>
                                <% if(typeof errors !='undefined' ){ %>
                                    <% errors.forEach(error=>{%>
                                        <li>
                                            <%= error.message %>
                                        </li>
                                        <% }) %>
                                            <% } %>
                            </ul>

                            <form action="/user/registration" method="POST">
                                <div>
                                    <input type="text" id="firstName" name="firstName" placeholder="<%= response.__("registration.placeHolders.firstName") %>"
                                        required>
                                </div>
                                <div>
                                    <input type="text" id="lastName" name="lastName" placeholder="<%= response.__("registration.placeHolders.lastName") %>" required>
                                </div>
                                <div>
                                    <input type="text" id="country" name="country" placeholder="<%= response.__("registration.placeHolders.country") %>" required>
                                </div>
                                <div>
                                    <input type="text" id="city" name="city" placeholder="<%= response.__("registration.placeHolders.city") %>" required>
                                </div>
                                <div>
                                    <input type="text" id="streetHouseNumber" name="streetHouseNumber"
                                        placeholder="<%= response.__("registration.placeHolders.streetHouseNumber") %>" required>
                                </div>
                                <div>
                                    <input type="email" id="email" name="email" placeholder="E-Mail" required>
                                </div>
                                <div>
                                    <input type="password" id="password" name="password" placeholder="<%= response.__("registration.placeHolders.password") %>" 
                                    required>
                                </div>
                                <div>
                                    <input type="password" id="password2" name="password2"
                                        placeholder="<%= response.__("registration.placeHolders.confirmPassword") %>" required>
                                </div>
                                <div>
                                    <button class="btn btn-outline-dark" type="submit"><%= response.__("registration.button.text") %></button>

                                </div>
                                <a href="/user/login"><%= response.__("login.login") %></a>
                            </form>
                        </div>
                </div>
            </div>

            <%- include('../partials/footer.ejs') %>
    </body>

</html>
